<div class="row no-gutters justify-content-center">
  <% @challenges.each do |challenge| %>
  <div class="card card-margin" style="width: 18rem;">
    <%= image_tag challenge.gif, class: "ard-img-top gif"%>
    <div class="card-body">
      <h5 class="card-title"><%= challenge.name %></h5>
      <p class="card-text"><%= challenge.description %></p>
      <div class="below">
        <div class="d-flex flex-column justify-content-center">
        <%= cl_image_tag challenge.user.photo, class: 'avatar', title: challenge.user.first_name %>
        <!-- <%= challenge.user.nickname %> -->
        </div>
        <%= link_to "See details", challenge_path(challenge), class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
  <% end %>
</div>
<div class="justify-content-center">
  <%= link_to "Create a new challenge", new_challenge_path , class: "btn btn-gradient" %>
</div>
