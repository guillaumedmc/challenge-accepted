<h1>Create a new challenge</h1>

<%= link_to "Back to all challenges", challenges_path %>

<%= form_for(@challenge) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Challenge name", :required => true %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, placeholder: "Challenge description", class: 'form-control', :required => true %>
  </div>

  <div class="form-group">
    <%= f.label :completion_date %>
    <%= f.text_field :completion_date, placeholder: "DD/MM/YYYY", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :reward %>
    <%= f.text_field :reward, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :contenders %>
    <%= f.text_field :contenders, class: 'form-control' %>
  </div>


  <%= f.submit class: 'btn btn-gradient' %>
<% end %>
