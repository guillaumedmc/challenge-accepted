<div class="container">
  <h1>Edit <%= @challenge.name %></h1>

  <%= link_to "Back to all challenges", challenge_path(@challenge) %>

   <%= simple_form_for(@challenge) do |f| %>

    <div class="form-group">
      <%= f.input :name, class: 'form-control', placeholder: "Challenge name", required: true, maxlength: 25 %>
    </div>

    <div class="form-group">
      <%= f.input :description, placeholder: "Challenge description", class: 'form-control', required: true, id: "body-field" %>
    </div>

    <div class="form-group">
      <%= f.input :completion_date, class: 'form-control',  placeholder: "DD/MM/YYYY" %>
    </div>

    <div class="form-group">
      <%= f.input :theme, as: :string, hint: '1 or 2 words to describe your challenge', class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= f.input :reward, as: :string, class: 'form-control', required: true %>
    </div>

    <%= f.button :submit, class: 'btn btn-gradient' %>
  <% end %>
</div>


