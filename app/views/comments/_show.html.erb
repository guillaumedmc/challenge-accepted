<ul class="comment-section">

    <li class="comment user-comment">
        <div class="info">
            <a href="#"><%= comment.user.nickname %></a>
            <span><%= comment.created_at.strftime("%a %Y-%m-%d at %Hh%M")%></span>
        </div>
        <a class="avatar" href="#">
            <%= cl_image_tag comment.user.photo, class: 'avatar', title: comment.user.first_name %>
        </a>
        <p><%= comment.content %></p>
    </li>
</ul>
